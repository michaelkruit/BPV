@model IEnumerable<DeltaImpuls.Models.location>

@{
    ViewBag.Title = "Locaties";
}

<h2>@ViewBag.Title</h2>

<table class="table-responsive">
@foreach (var item in Model) {
    <tr>
        <td>
            @{ 
                string location = Server.HtmlDecode(Html.DisplayFor(modelItem => item.city).ToString());
            }
            @Html.ActionLink(location, "Edit", new { id = item.ID })
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>

<p>
    <button type="button" class="btn btn-default btn-lg" onclick="location.href='@Url.Action("Create")'">
        Nieuwe categorie toevoegen
    </button>
</p>