@model IEnumerable<DeltaImpuls.Models.lj>

@{
    ViewBag.Title = "Junior licenties";
}

<h2>@ViewBag.Title</h2>

<table class="table-responsive">

@foreach (var item in Model)
{
    <tr>
        <td>
            @{
                string license = Server.HtmlDecode(Html.DisplayFor(modelItem => item.license).ToString());
            }

            @Html.ActionLink(license, "Edit", new { id = item.ID })
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>
}
</table>

<p>
    <button type="button" class="btn btn-default btn-lg" onclick="location.href='@Url.Action("Create")'">
        Nieuwe licentie toevoegen
    </button>
</p>